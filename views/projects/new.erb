<div class="new-project-wrapper">
  <h1>Create new Project </h1>
<%# <p>xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx</p>  %>
  <form class="new-project-form" action="/projects" method="post" enctype="multipart/form-data">
    <div>
      <label for="">Title</label>
      <input name="title" type="text" required>
    </div>
    <div>
      <label for="">Design: </label>
      <input name="design" type="text" required>
    </div>
    <div>
      <label for="">Size, WxH, mm: </label>
      <input name="size" type="text" required>
    </div>
    <div>
      <label for="">Colors: </label>
      <input name="colors" type="text" required>
    </div>
    <div>
      <label for="">Fabric, count: </label>
      <input name="fabric_count" type="text" required>
    </div>
    <div>
      <label for="">Started: </label>
      <input name="start" type="date" max="<%= Time.now.strftime("%Y-%m-%d")%>" required>
    </div>
    <div>
      <label for="">Finished: </label>
      <input name="finish" type="date" max="<%= Time.now.strftime("%Y-%m-%d")%>" required>
    </div>
    <div> 
      <label for="">Additional Info: </label>
      <textarea name="details" rows="5" cols="50"></textarea>
    </div>
    <div>
      <label for="add-file">Choose a file:</label>
      <input type="file" id="add-file" name="image" required>
    </div>
  <button>Submit</button>
</form>
</div>
