
<h1>My Projects</h1>

<% if user_projects.count == 0 %>
    <h3>You don't have any projects yet. </h3>
    <% end %>

<div class="my-projects">
    <% user_projects.each do |project|%>
        <div>
            <a id="my-project" href="/projects/<%= project["id"]%>"><p class="project-info"><%=project["title"]%>,<br> <%=project["design"]%></p></a>
            <img src="<%=project["main_image_url"]%>">
        </div>
    <% end %>
</div>
